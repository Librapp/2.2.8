<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bottom_tab">
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/log_reg_checkbox_selector</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="ActivityAllTranslucentNew" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#00000000</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ActivityAllTranslucentNewHasTitle" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#00000000</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ActivityTranslucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">@color/black_trans</item>
        <item name="android:background">#66000000</item>
    </style>

    <style name="myratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbarlayerlist</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="poll_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/poll_checkbox_selector</item>
    </style>

    <style name="poll_time_style">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="poll_text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="ContentOverlay" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 2.2开始用的style -->
    <style name="navigator_text_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="recommand_tag_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tag_default</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="activities_tag_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tag_default</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="channel_detail_tag_text_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tag_default</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pd_tag_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tag_default</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="my_text_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableRight">@drawable/my_arrow</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="my_function_layout_style">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/my_fellow_layout_bg</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="my_function_tag_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

    <style name="my_function_valuetext_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

    <style name="pd_detail_title_style">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pd_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/pd_rating_bar</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>

    <style name="navigator_btn_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/navigator_btn_bg</item>
        <!-- <item name="android:textScaleX">1.5</item> -->
    </style>

    <color name="activity_bg_color">#e9e9e9</color>

    <style name="activity_theme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:colorBackground">@color/activity_bg_color</item>
        <item name="android:windowBackground">@color/activity_bg_color</item>
        <item name="android:windowAnimationStyle">@style/base_activity_animation</item>
    </style>

    <style name="listViewStyle">
        <item name="android:cacheColorHint">@color/list_transparent</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@drawable/rcmd_list_diviver</item>
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:dividerHeight">1.0dip</item>
    </style>

    <style name="MediaController_SeekBar">
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="base_small_progressbar_style">
        <item name="android:maxWidth">18.0dip</item>
        <item name="android:maxHeight">18.0dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_small_anim</item>
        <item name="android:minWidth">18.0dip</item>
        <item name="android:minHeight">18.0dip</item>
    </style>

    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>

    <style name="channel_listview_style">
        <item name="android:cacheColorHint">@color/list_transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="@android:listSelector">@color/transparent</item>
    </style>

    <style name="channel_group_text_style">
        <item name="@android:textColor">#333333</item>
        <item name="@android:textSize">16sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowColor">@color/white</item>
    </style>

    <style name="channel_program_name_text_style">
        <item name="@android:textColor">#383838</item>
        <item name="@android:textSize">15sp</item>
    </style>

    <style name="progressBarHorizontal_color" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">2.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/biz_pc_list_offline_selector</item>
        <item name="android:minHeight">1.0dip</item>
    </style>

    <style name="menu_title_style_in_scroll">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_title_bg</item>
        <item name="android:textColor">@color/menu_title_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="menu_sub_title_style_in_scroll">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/menu_item_selected</item>
        <item name="android:textColor">@color/menu_item_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="actionBarTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:colorBackground">@color/activity_bg_color</item>
        <item name="android:windowBackground">@color/activity_bg_color</item>
        <item name="android:windowAnimationStyle">@style/base_activity_animation</item>
    </style>

    <style name="ApplicationStyle" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/base_activity_animation</item>
    </style>

    <style name="base_activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/base_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/base_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_stay_orig</item>
        <item name="android:activityCloseExitAnimation">@anim/base_slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/base_slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/base_stay_orig</item>
        <item name="android:taskCloseEnterAnimation">@anim/base_stay_orig</item>
        <item name="android:taskCloseExitAnimation">@anim/base_slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/base_slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/base_stay_orig</item>
        <item name="android:taskToBackEnterAnimation">@anim/base_stay_orig</item>
        <item name="android:taskToBackExitAnimation">@anim/base_slide_right_out</item>
    </style>

</resources>